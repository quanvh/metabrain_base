<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F8FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/imgMenuAlt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_alt_right"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/buyProApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_vip"
                    android:text="@string/premium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_detail"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    app:drawableStartCompat="@drawable/ic_buy_vip" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="@dimen/_12sdp"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false">

                <LinearLayout
                    android:id="@+id/layoutPhotos"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_image_scan"
                        android:contentDescription="@string/home_photos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_photos"
                        android:textSize="@dimen/size_description"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutVideos"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_video_scan"
                        android:contentDescription="@string/home_videos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_videos"
                        android:textSize="@dimen/size_description"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAudios"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_audio_scan"
                        android:contentDescription="@string/home_audios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_audios"
                        android:textSize="@dimen/size_description"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDocuments"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_file_scan"
                        android:contentDescription="@string/home_files_docs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_files_docs"
                        android:textSize="@dimen/size_description"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
